{
  "name": "revert",
  "description": "Revert game web site",
  "private": true,
  "scripts": {
    "fix": "prettier --write '*.{hbs,js}' '_data/**/*' '_includes/**/*'",
    "build": "run-s build:css build:site",
    "start": "run-p dev:*",
    "build:css": "NODE_ENV=production tailwind build -o tailwind.css",
    "build:site": "NODE_ENV=production eleventy",
    "dev:css": "NODE_ENV=development tailwind build -o tailwind.css -w",
    "dev:site": "NODE_ENV=development eleventy --watch --serve --quiet"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/o0oradaro0o/RevertWeb.git"
  },
  "bugs": {
    "url": "https://github.com/o0oradaro0o/RevertWeb/issues"
  },
  "homepage": "https://revert-web.vercel.app",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "feather-icons": "^4.28.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "simple-git": "^2.38.0",
    "tailwindcss": "^2.1.1"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.hbs",
        "options": {
          "parser": "html"
        }
      }
    ]
  }
}
